    <section class="contenedor">
        <div class="container">
            <div class="item-contenedor" id="card-group">
                {{#each products}}
                    <div class="row g-0">
                        <div class="col-md-4">
                            <img src="{{this.imagen}}" class="img-fluid rounded-start" width="80px" alt="...">
                        </div>
                        <div class="col-md-8">
                            <div class="card-body">
                                <h5 class="card-title">{{this.title}}</h5>
                                <p class="card-text">Género: {{this.category}}</p>   
                                <p class="card-text">Precio: {{this.price}}</p>  
                                <p class="card-text">Code: {{this.code}}</p>    
                                <p class="card-text">Stock: {{this.stock}}</p>
                                <p class="card-text">Género: {{this.description}}</p>     
                            </div>
                        </div>
                    </div>
                {{/each}}
            </div>
        </div>
    </section>



